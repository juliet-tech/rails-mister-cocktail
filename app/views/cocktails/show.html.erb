<div class="container">
  <div class="title">
    <h1><%= @cocktail.name %></h1>
  </div>
  <div class="dosage-info">
    <% @cocktail.doses.each do |c|  %>
      <h3><%= c.ingredient.name %></h3>
      <p><%= c.description %></p>
    <% end %>
  </div>
  <div class="btn btn-primary">
    <%= link_to "Add an ingredient to your magic recipe", new_cocktail_dose_path(@cocktail) %>
  </div>
  <div class="btn btn-info">
    <%= link_to "Delete a baby", dose_path %>
  </div>
</div>

