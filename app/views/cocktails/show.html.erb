<div class="wrapper-show">
  <div class="title-show">
    <h1><%= @cocktail.name %></h1>
  </div>
  <div class="container">
    <div class="row">
     <div class="col-md-6">
      <div class="cocktail-img" style="background-image: url('http://<%= @cocktail.img_url %>')">
        <%#= cl_image_tag("THE_IMAGE_ID_FROM_LIBRARY",
          width: 400, height: 300, crop: :fill) %>
      </div>
     </div>
    <div class="col-md-6">
      <div class="dosage-info">
        <% @cocktail.doses.each do |dose|  %>
          <h3><%= dose.ingredient.name %></h3>
          <p><%= dose.description %></p>
          <%= link_to "Delete", dose_path(dose), method: :delete, class: 'btn btn-warning' %>
        <% end %>
      </div>
      <br>
      <div class="btn btn-info">
        <%= link_to "Add an ingredient to your magic recipe", new_cocktail_dose_path(@cocktail) %>
      </div>
    </div>

    </div>
  </div>

