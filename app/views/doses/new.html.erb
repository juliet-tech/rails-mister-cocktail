<div class="container">
  <h1><%= @cocktail.name  %></h1>
  <div class="row">
    <div class="col-md-6">
      <%= simple_form_for [ @cocktail, @dose ] do |f| %>
      <%= f.association :ingredient, label: "Select your poison", placeholder: "Blueberry Gin" %>
      <%= f.input :description, label: "Give it a recipe", placeholder: "4cl after the first sip" %>
      <%= f.submit "Add your cocktail recipe", class: 'btn btn-warning' %>
      <% end %>
    </div>
    <div class="col-md-6">
      <div class="cocktail-img" style="background-image: url('http://<%= @cocktail.img_url %>')">
      </div>
    </div>
  </div>
</div>
